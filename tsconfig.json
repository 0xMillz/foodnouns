{
  "compilerOptions": {
    /*
     * Uncomment for small accuracy reduction & vast build time reduction for
     * --watch mode
     */
    "assumeChangesOnlyAffectDirectDependencies": true,
    "alwaysStrict": false,
    // Ensure that .d.ts files are created by tsc, but not .js files
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "composite": true,
    "lib": ["es2020", "dom", "es5"],
    "module": "commonjs",

    /* Module Resolution Options */
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./packages",
    "paths": {
      "@foodnouns/*": ["$1/[packages]/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitThis": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "strict": false,
    "strictNullChecks": false,
    "target": "es2020",
    "emitDeclarationOnly": true,
    // Ensure that Babel can safely transpile files in the TypeScript project
    "isolatedModules": true,
    "jsx": "react-jsx"
  },
  "exclude": ["**/dist", "**/*.config.ts"],
  "references": [
//    { "path": "packages/foodnouns-api" },
//    { "path": "packages/foodnouns-assets" },
//    { "path": "packages/foodnouns-contracts" },
//    { "path": "packages/foodnouns-sdk" },
//    { "path": "packages/foodnouns-subgraph" },
    { "path": "packages/foodnouns-webapp" }
  ],
}

