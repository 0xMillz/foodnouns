{
  "name": "@foodnouns/contracts",
  "version": "0.2.0",
  "description": "Nouns solidity contracts & artifacts",
  "author": "Nounders",
  "homepage": "https://foodnouns.wtf",
  "license": "GPL-3.0",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "clean": "rimraf dist tsconfig.build.tsbuildinfo",
    "build": "yarn build:sol --force && yarn build:ts",
    "build:ts": "tsc -p tsconfig.build.json",
    "build:sol": "hardhat compile",
    "build:declarations": "shx cp typechain/*.d.ts dist/typechain",
    "build:all": "yarn build:sol --force && yarn build:ts && yarn build:declarations",
    "hardhat": "npx hardhat@2.10.2",
    "task:accounts": "npx hardhat@2.10.2 accounts",
    "task:deploy": "npx hardhat@2.10.2 deploy",
    "task:deploy-and-configure": "npx hardhat@2.10.2 deploy-and-configure",
    "task:mint-noun": "npx hardhat@2.10.2 mint-noun",
    "task:populate-descriptor": "npx hardhat@2.10.2 populate-descriptor",
    "task:run-local": "npx hardhat@2.10.2 run-local",
    "test": "npx hardhat@2.10.2 test",
    "coverage": "npx hardhat@2.10.2 coverage",
    "prepare": "yarn build"
  },
  "devDependencies": {
    "solidity-coverage": "0.7.22",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "3.0.3",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/contracts": "^4.1.0",
    "@openzeppelin/contracts-upgradeable": "^4.1.0",
    "@openzeppelin/hardhat-upgrades": "^1.8.2",
    "@typechain/ethers-v5": "11.1.2",
    "@typechain/hardhat": "7.0.0",
    "@types/express": "^4.17.11",
    "@types/prompt": "^1.1.0",
    "base64-sol": "^1.0.1",
    "dotenv": "^10.0.0",
    "ethereum-waffle": "^3.4.4",
    "hardhat": "2.10.2",
    "hardhat-abi-exporter": "^2.9.0",
    "hardhat-gas-reporter": "^1.0.8",
    "prettier-plugin-solidity": "^1.0.0-beta.12",
    "prompt": "^1.1.0",
    "shx": "^0.3.3",
    "ts-node": "^10.0.0",
    "typechain": "^8.0.0"
  },
  "dependencies": {
    "ethers": "5.7.2"
  }
}
